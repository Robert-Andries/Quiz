<Application x:Class="Quiz.WPFUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:Quiz.WPFUI.Views"
             xmlns:viewModels="clr-namespace:Quiz.WPFUI.ViewModels">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:HomeViewModel}">
            <views:HomeView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:QuizViewModel}">
            <views:QuizView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:FinishViewModel}">
            <views:FinishView />
        </DataTemplate>
    </Application.Resources>
</Application>